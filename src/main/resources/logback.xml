<configuration debug="false" scan="false">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
          <pattern>%d [%thread] %-5level  %logger{35} - %msg%n</pattern>
       </encoder>
    </appender>

    <root level="trace">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>